query countUnreadUserNotifications(name) {
    val user = user@{ .name == name };
    return notification@*{ .user == user, .read == false } ( .id );
}

query getAllUserNotifications(name) {
    val user = user@{ .name == name };
    return notification@*{ .user == user } (
        .id,
        .trigger,
        .content,
        .read,
        -sort .timestamp
    );
}
