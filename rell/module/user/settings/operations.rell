operation createUserSettings(name, avatar: text, description: text) {
    val user = user@{ .name == name };
    require(is_signer(user.pubkey));
    create userSettings(user, avatar = avatar, description = description);
}

operation updateUserSettings(name, avatar: text, description: text) {
    val user = user@{ .name == name };
    require(is_signer(user.pubkey));
    update userSettings@{ .user == user }( avatar = avatar, description = description );
}