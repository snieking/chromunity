operation toggle_mute(username: name, name, muted: boolean) {
    val user = get_verified_user(username);

    if (muted) {
        create user_mute(user = user, muted_user = user@{ .name == name });
    } else {
        delete user_mute@{ .user == user, .muted_user == user@{ .name == name }};
    }
}